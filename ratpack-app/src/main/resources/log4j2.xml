<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    <Console name="ConsoleClient" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss.SSS} [%t] %-5level %logger{36} [%X{clientIP}] [%X{requestId}] - %msg %n"/>
    </Console>
    <RollingFile name="RollingFile" fileName="logs/app.log"
                 filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
      <PatternLayout>
        <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} [%X{clientIP}] [%X{requestId}] - %msg %n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="20 MB"/>
      </Policies>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Logger name="ratpack.spark.jobserver" level="debug" additivity="false">
      <AppenderRef ref="ConsoleClient"/>
      <AppenderRef ref="RollingFile" />
    </Logger>

    <Logger name="spark.func" level="debug" additivity="false">
      <AppenderRef ref="ConsoleClient"/>
      <AppenderRef ref="RollingFile" />
    </Logger>

    <Root level="error">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="RollingFile"/>
    </Root>

  </Loggers>
</Configuration>
